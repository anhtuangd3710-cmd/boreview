# ===========================================
# DATABASE - Neon PostgreSQL (Required)
# ===========================================
DATABASE_URL="postgresql://user:password@host/database?sslmode=require"

# ===========================================
# NEXTAUTH - Authentication (Required)
# ===========================================
NEXTAUTH_URL="https://your-domain.vercel.app"
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"

# ===========================================
# ADMIN CREDENTIALS - For initial seeding
# ===========================================
ADMIN_EMAIL="admin@yourdomain.com"
ADMIN_PASSWORD="your-secure-password-min-8-chars"

# ===========================================
# SUPABASE - Image Storage (Required for uploads)
# ===========================================
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# ===========================================
# GOOGLE AI - Gemini API (Optional - for AI features)
# ===========================================
GOOGLE_AI_API_KEY="your-google-ai-api-key"

# ===========================================
# GOOGLE ADSENSE (Optional)
# ===========================================
NEXT_PUBLIC_ADSENSE_ID=""

# ===========================================
# SITE CONFIGURATION (Required)
# ===========================================
NEXT_PUBLIC_SITE_URL="https://your-domain.vercel.app"
NEXT_PUBLIC_SITE_NAME="Bơ Review"
NEXT_PUBLIC_SITE_DESCRIPTION="Tóm tắt & phân tích nội dung video từ kênh Bơ Review"
NEXT_PUBLIC_YOUTUBE_CHANNEL="https://www.youtube.com/@YourChannel"

